<!doctype html>
<!--[if lt IE 9]><html class="no-js no-svg ie lt-ie9 lt-ie8 lt-ie7" {{ site.language_attributes }}> <![endif]-->
<!--[if IE 9]><html class="no-js no-svg ie ie9 lt-ie9 lt-ie8" {{ site.language_attributes }}> <![endif]-->
<!--[if gt IE 9]><!-->
<html class="no-js no-svg" {{ site.language_attributes }}> <!--<![endif]-->
    <head>
        <meta charset="{{ site.charset }}"/>
        {% block title %}
            <title>{{ post.title }}</title>
        {% endblock %}
        <meta name="description" content="{{ site.description }}">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="stylesheet" href="{{ site.theme.link }}/style.css" type="text/css" media="screen"/>
        <meta http-equiv="Content-Type" content="text/html; charset=UTF-8"/>
        <meta http-equiv="X-UA-Compatible" content="IE=edge">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <link rel="apple-touch-icon" sizes="180x180" href="{{ theme.link }}/dist/favicon/apple-touch-icon.png">
        <link rel="icon" type="image/png" sizes="32x32" href="{{ theme.link }}/dist/favicon/favicon-32x32.png">
        <link rel="icon" type="image/png" sizes="16x16" href="{{ theme.link }}/dist/favicon/favicon-16x16.png">
        <link rel="manifest" href="{{ theme.link }}/dist/favicon/site.webmanifest">
        <link rel="mask-icon"href="{{ theme.link }}/dist/favicon/safari-pinned-tab.svg" color="#FFC236">
        {{ function('wp_head') }}
    </head>

    <body {{ body_class }} ?>
        {% include 'partials/header.twig' %}

        <main class="page"> 
            {% block content %}{% endblock %}
        </main>

        {% include 'partials/footer.twig' %}
        {{ function('wp_footer') }}
	      {% block specific_script %}{% endblock %}
    </body>
</html>
